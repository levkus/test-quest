.javascript-slider
	margin-bottom 35px
	padding 0 0 0 14px

	+below(820px)
		padding-left 0

	&__container
		padding 27px 0 5px
		font-size 0
		cursor pointer

	&__bar
		display block
		width 100%
		height 26px
		background url(../images/js-slider-bar.png)
		background-repeat no-repeat
		background-size contain

	&__pointer,
	&__ghost
		position relative
		top -3px
		display inline-block
		width 16px
		height 14px
		background url(../images/js-slider.png)

	&__pointer
		z-index 2
		margin-left -8px

	&__ghost
		margin-left -16px
		opacity 0
		transition opacity .3s

	&__levels
		margin-bottom 38px
		display flex
		width 100%
		font-size 13px
		font-weight bold
		line-height 19px

	&__level-selector
		padding-right 5px
		cursor pointer

		&:nth-child(1)
			width 19.3%

		&:nth-child(2)
			width 29.7%

		&:nth-child(3)
			width 23%

		&:nth-child(4)
			padding 0
			width 28%
			text-align right

		&:hover
			text-decoration underline

.pointer__value
	position absolute
	top -14px
	left -8px
	display block
	width 32px
	height 20px
	font-size 11px
	text-align center
	opacity .8
