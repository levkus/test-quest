mixin form-text-input(id, label, value)
	.basic-item
		label.basic-item__label(for=id)!= label
		input.basic-item__input-text(id=id name=id value=value type="text")&attributes(attributes)
		
mixin radio-button(id, name, label)
	.radio
		input.radio__input-radio(id=id name=name type="radio")&attributes(attributes)
		label.radio__label(for=id)=label
		
mixin checkbox(id,label)
	.checkbox
		input.checkbox__input-checkbox(id=id name=id type="checkbox")&attributes(attributes)
		label.checkbox__label(for=id)=label
